@model FutureCalculator.Models.FutureValueModel
@{ 
    ViewBag.Title = "Future Value Calculator";
}

<style>
    #logo 
    {
        object-fit: cover;
        width: 50px;
        height: 100px;
    }
    
</style>
<div class="container">
<header class="jumbotron">
    <img src="~/images/panda.png" alt="Calc logo" id="logo" class="img-fluid"  style="object-fit:cover;  width:auto; height:auto"/>
    <h1 class="mt-3">@ViewBag.Title</h1>
</header>

  <main>
      <div class="alert alert-success alert-dismissible">
         <button class="close" data-dismiss="alert">&times;</button> 
          This site is for educational purposes only!
      </div>
 <form asp-action="Index" method="post">
     <div asp-validation-summary="All"></div>
     <div class="row">
         <label asp-for="MonthlyInvestment" class="control-label col-3">Monthly Investment:</label>
         <input asp-for="MonthlyInvestment" class="form-control col-3"/>
     </div>
     <div class="row">
         <label asp-for="YearlyInterestRate" class="control-label col-3">Yearly Interest Rate:</label>
         <input asp-for="YearlyInterestRate" class="form-control col-3" />
     </div>
     <div class="row">
         <label asp-for="Years" class="control-label col-3">Number of Years</label>
         <input asp-for="Years" class="form-control col-3"/>
     </div>
     <div  class="row">
         <label class="control-label col-3">Future Value:</label>
         <input  value=@ViewBag.FutureValue readonly class="form-control col-3"/>
     </div>
     <div class="row">
     <button type="submit" class="btn btn-primary">Calculate</button>
     <a asp-action="Index" class="btn btn-secondary">Clear</a>
     </div>
 </form>
  </main>
</div>
